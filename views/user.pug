extends layout

block content
  .container

    main
      .jumbotron.text-center
        .row
          .col-sm-12
        //- img(src=user.picture)
        h2.text-center#whitetext
          strong Welcome To Our Wellbeing Impact Assessment Toolkit:
          |
        br  
        p.text-left Please create a new project below and complete the 7 wellbeing  sections:  #{user.nickname} 
          br
          form(action='/projectSetup', method='POST')
            .form-group
              label Your project name:
              input.w3-input(type="text", name='projectName', value=projectName)
            .form-group
              label Project description:
              textarea.form-control(type='text', rows='10', name='projectInfo')
          
            .form-group.text-right
              button.btn.btn-primary.btn-lg(type='submit') Start Assessment